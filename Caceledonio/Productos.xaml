                       HorizontalAlignment="Left"
                       Style="{StaticResource LabelTextBlockStyle}"
                       Margin="10,0,300,0" />

         <Image Name="Carrito"
                   Source="Assets/carritodecompras.png"
                   Stretch="Uniform"
                   HorizontalAlignment="Right"
                   Margin="0,20,18,20"/>
            
